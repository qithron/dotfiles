#!/usr/bin/env sh

[ "$1" = 'ce' ] && clear

[ -x '/usr/bin/pacman' ] && ufetch-arch
[ -x '/usr/bin/emerge' ] && ufetch-gentoo

python -c "from random import randint as r
for _ in range(1):
    for _ in range($(tput cols)):
        print('\033[1;3%d;4%dm%s' % (r(1,7), r(1,7), chr(9604)), end='')
    print('\033[0m')"
