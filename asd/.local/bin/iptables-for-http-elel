#!/usr/bin/env sh

test "$(whoami)" = 'root' || exec sudo "$0" "$@"

if [ "$1" = '-D' ] || [ "$1" = '--delete' ]; then
    C="$1"
else C='--append'; fi

NET=192.168.204.1

iptables -t nat "$C" OUTPUT -p tcp -d 127.0.0.0/8 \
    --dport 80 --jump REDIRECT --to-ports 8080 &&
iptables -t nat "$C" PREROUTING -p tcp \
    --dport 80 --jump REDIRECT --to-ports 8080 #&&
#iptables -t nat "$C" PREROUTING ! -d "$NET/24" \
#    --jump DNAT --to-destination "$NET"
